@{
    ViewBag.Title = "Login";
}

@*Html.ValidationSummary(true)*@

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="form-group">
        @Html.TextBox("login", null, new { @class = "form-control", placeholder = "login" }) <br/>
        @Html.Password("password", null, new { @class = "form-control", placeholder = "password" }) <br/>
        <button type="submit" class="btn btn-default">Войти</button>
    </div>
}