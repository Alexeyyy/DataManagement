        <div class="menu">
            <header>
                @if (Session["Role"] == null)
                {
                    using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
                    {
                    <div class="form-group">
                        @*Была ли ошибка при вводе логина и пароля*@
                        @if(Session["ErrorLogIn"] != null && Convert.ToBoolean(Session["ErrorLogin"].ToString())) {
                            if (Convert.ToBoolean(Session["ErrorLogIn"].ToString()))
                            {
                                <div class="form-message">
                                    Логин или пароль введены неверно!
                                </div>
                            }
                        }
                        @Html.TextBox("login", null, new { @class = "form-control", placeholder = "login" })
                        @Html.Password("password", null, new { @class = "form-control", placeholder = "password" })
                        <button type="submit" class="btn btn-default">Войти</button>
                        @Html.ActionLink("Регистрация", "SignUpChoice", "Registration", null, new { @class = "btn btn-default" })
                    </div>
                    }
                }
                else {
                    <div class="form-group navbar-form navbar-right">
                        <div class="form-message">
                            @Session["Greeting"]
                        </div>
                        @Html.ActionLink("Выход", "Logout", "Account", null, new { @class = "btn btn-default" })
                    </div>
                }
