@model IEnumerable<FundApp.Models.Section>

@{
    ViewBag.Title = "SystemSections";
}

<h2 class="title">Экологические кружки</h2>

@if(Model.Count() != 0)
{
    <table class="table table-striped table-condensed table-hover data-table table-bordered">
        <thead>
            <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Число участников</th>
                <th>Число свободных мест</th>
                <th>Время начала занятий</th>
                <th>Преподаватель(ФИО)</th>
                <th>Редактирование</th>
                <th>Удаление</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Title</td>
                    <td>@p.Description</td>
                    <td>@p.ParticipantsCount</td>
                    <td>@p.FreeSpotsCount</td>
                    <td>@p.StartLessonsTime.ToShortDateString()</td>
                    <td>@p.Ecologist.Surname @p.Ecologist.Name @p.Ecologist.FatherName</td>
                    <td>@Html.ActionLink("Редактирование", "EditSection", "RoomAdministrator", new {sectionID = p.SectionID }, null)</td>
                    <td>@Html.ActionLink("Удаление", "DeleteSection", "RoomAdministrator", new { sectionID = p.SectionID }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>
        Извините, вашему запросу не соответствуют никакие данные.   
    </p>
}

@Html.ActionLink("Создать экологическую секцию", "CreateSection", "RoomAdministrator", new { @class="btn btn-default" })
