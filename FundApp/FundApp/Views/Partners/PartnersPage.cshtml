@model IEnumerable<FundApp.Models.Partner>

@{
    ViewBag.Title = "Partners";
}

<h2>Организации-партнеры</h2>

<div class="search-block">
     @using (Html.BeginForm("SearchPartner", "Partners", FormMethod.Get, new { @class = "navbar-form navbar-right" }))
     {
        @Html.TextBox("searchString", null, new { @class = "form-control", placeholder = "Поиск..." })
        <button type="submit" class="btn btn-default">Искать</button>
     }
</div>

<div class="clear">
</div>

@if(Model.Count() != 0) {
    <table class="table table-striped table-condensed table-hover data-table table-bordered">
        <thead>
            <tr>
                <th>Представитель ФИО</th>
                <th>Компания</th>
                <th>Адрес</th>
                <th>Email</th>
                <th>О компании</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Surname @p.Name @p.FatherName</td>
                    <td>@p.CompanyName</td>
                    <td>@p.Address</td>
                    <td>@p.Email</td>
                    <td>@p.Description</td>
                </tr>
            }
        </tbody>
    </table>
} else {
    <p>
        Извините, вашему запросу не соответствуют никакие данные.   
    </p>
}